{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2015",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./*.ts", "../node_modules/@cloudflare/workers-types/index.d.ts", "./index.ts"],
  "exclude": ["dist/"]
}
